{% extends 'base.html.twig' %}

{% block head %}<p style="color: #e8f80a">Draw</p>{% endblock %}
{% block title %}Draw{% endblock %}

{% block body %}
<div class="text_cen">
<h1>Remaining cards: {{ remaining_cards }}</h1>
<h1>BEFORE: {{ before_draw }}</h1>
</div>
<div class="cards">
{% for name in cards_ %}
        <div class="all_cards">
        {% for i in name %}
            <div class="card" style="color:{{i[2]}};"><div>{{ i[0] }}</div><div>{{ i[1] }}</div></div>
        {% endfor %}
        </div>
{% endfor %}
</div>
{% endblock %}
